{
  "name": "quix",
  "version": "0.0.6",
  "description": "quick pix simulator",
  "engines": {
    "node": "18"
  },
  "repository": "https://github.com/jpolvora/quix",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts --watch .env --watch ./src",
    "dev:proxy": "nodemon ./src/app-proxy/index.ts --watch .env --watch ./src/app-proxy",
    "dev:account": "nodemon ./src/index.ts --watch .env --watch ./src -- -m app-account -p 3001",
    "dev:transactions": "nodemon ./src/index.ts --watch .env --watch ./src -- -m app-transactions -p 3002",
    "start:account": "node ./dist/index.js -m app-account",
    "start:transactions": "node ./dist/index.js -m app-transactions",
    "start:proxy": "node ./dist/app-proxy/index.js",
    "start": "pm2-runtime start ecosystem.config.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "clean": "rimraf dist",
    "compose:up": "npm run build && docker compose up --build -d",
    "compose:down": "docker compose down -v",
    "test": "jest"
  },
  "author": "Jone Polvora",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-http-proxy": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.19",
    "@types/express-http-proxy": "^1.6.5",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.8",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.5",
    "@types/yargs": "^17.0.29",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
