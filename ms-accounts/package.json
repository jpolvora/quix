{
  "name": "quix",
  "version": "0.0.7",
  "description": "quick pix simulator",
  "engines": {
    "node": "20"
  },
  "repository": "https://github.com/jpolvora/quix",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts --watch .env --watch ./src",
    "start": "node ./dist/index.js -p 3001",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "clean": "rimraf dist",
    "compose:up": "npm run build && docker compose up --build",
    "compose:down": "docker compose down -v",
    "test": "jest",
    "gendocs": "typedoc --out docs src/index.ts",
    "servedocs": "pm2 serve ./docs 8088",
    "db:migrate": "npx prisma migrate dev"
  },
  "author": "Jone Polvora",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "amqplib": "^0.10.3",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.3",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.8",
    "@types/supertest": "^2.0.15",
    "@types/yargs": "^17.0.29",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prisma": "^5.5.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@": "src"
  }
}